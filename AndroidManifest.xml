<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chineselanguageapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.chineselanguageapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.chineselanguageapp.About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.example.chineselanguageapp.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.chineselanguageapp.Play"
            android:label="@string/title_activity_play" >
        </activity>
        <activity
            android:name="com.example.chineselanguageapp.Statistics"
            android:label="@string/title_activity_statistics" >
        </activity>
    </application>

</manifest>